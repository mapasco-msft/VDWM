<Window x:Class="VDWM.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VDWM.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid Loaded="Grid_Loaded">
        <StackPanel>
            <TextBlock FontWeight="Bold">VDWM</TextBlock>
            <TextBlock>
                To switch to a virtual desktop type: Control, Shift, 1-9. <LineBreak />
                To move your current app to a virtual desktop type: Control, Alt, 1-9. <LineBreak />
                You can minimize this window.
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
